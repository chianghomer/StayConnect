<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="10dp"


        >


    <ImageView android:id="@+id/newsletter"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:onClick="toTestDatabaseActivity"
        android:src="@drawable/newsletters"
        android:layout_margin="20dp"
        />

    <ImageView android:id="@+id/announcement"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:onClick="toDisplayNotification"
        android:src="@drawable/announcements"
        android:layout_margin="20dp"


        />
    <ImageView android:id="@+id/event"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:onClick="toTestDatabaseActivity"
        android:src="@drawable/event"
        android:layout_margin="20dp"


        />

    </LinearLayout>

