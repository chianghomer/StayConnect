    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="10dp"


        >


        <ImageView android:id="@+id/offers"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:onClick="toTestDatabaseActivity"
            android:src="@drawable/staff_offers1"
            android:layout_margin="20dp"

            />

        <ImageView android:id="@+id/food"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="toTestDatabaseActivity"
            android:src="@drawable/food_menu1"
            android:layout_margin="20dp"


            />
        <ImageView android:id="@+id/doctor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="toDoctorListActivity"
            android:src="@drawable/doctor2"
            android:layout_margin="20dp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="10dp"


        >


        <ImageView android:id="@+id/acronym"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:onClick="toDisplayAcronymActivity"
            android:src="@drawable/acronym"
            android:layout_margin="20dp"


            />

        <ImageView android:id="@+id/shuttle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="toTestDatabaseActivity"
            android:src="@drawable/newsletters"
            android:layout_margin="20dp"


            />
        <ImageView android:id="@+id/settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="toTestDatabaseActivity"
            android:src="@drawable/settings1"
            android:layout_margin="20dp"


            />

    </LinearLayout>



